@model Login

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include Font Awesome CSS for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #000;
            color: #fff;
        }

        .container {
            padding-top: 20px;
        }

        .form-control {
            background-color: #000;
            color: #fff;
            border: none;
            border-radius: 0;
            border-bottom: 2px solid #fff; /* Add bottom border */
            padding: 10px;
            margin-bottom: 20px;
        }

            .form-control:focus {
                box-shadow: none;
                border-color: white;
                background-color: black;
                color: white;
            }

        .checkbox-label {
            color: white;
        }

        .btn-create-account {
            background-color: #ff0000;
            border-color: #ff0000;
            border-radius: 25px;
            font-weight: bold;
            color: #fff;
            transition: all 0.3s ease;
        }

            .btn-create-account:hover {
                background-color: #e60000;
                border-color: #e60000;
            }

        .form-check-input:checked {
            background-color: black
        }



        .btn-create-account {
            background-color: #ff0000;
            border-color: #ff0000;
            border-radius: 25px;
            font-weight: bold;
            color: #fff;
            transition: all 0.5s ease;
            width: 125px
        }

            .btn-create-account:hover {
                background-color: #e60000;
                border-color: #e60000;
                color: #fff; /* Change text color to white */
                transform: translateY(-5px); /* Move button up on hover */
            }

    </style>
</head>
<body class="bg-dark">
    <h1>@TempData["Message"]</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" enctype="application/x-www-form-urlencoded">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control"  placeholder="Enter your email">
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Create Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Create a password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value=""  required>
                        <label class="form-check-label checkbox-label" >
                            I agree to the <a href="#" class="text-decoration-none">terms and conditions</a>
                        </label>
                       
                    </div>
                    <input type="submit" value="Sign Up"class="btn btn-create-account btn-block mt-4 mb-5"></input>
                </form>
            </div>
        </div>
    </div>
    <!-- Include Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
