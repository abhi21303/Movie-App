@model Login
@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
    <h2>@TempData["error"]</h2>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include Font Awesome CSS for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #000;
            color: #fff;
        }

        .form-control {
            background-color: #000;
            
            border: none;
            border-bottom: 2px solid white;
            border-radius: 0;
            color: white;
        }

            .form-control:focus {
                box-shadow: none;
                border-color: white;
                background-color: black;
                color: white;
            }

            /* Set text color to white */
            .form-control::placeholder,
            .form-control {
                color: #fff;
            }

        .form-label {
            color: white;
        }

        .form-check-input:checked {
            background-color: black
        }

        .btn-primary {
            background-color: #ff0000;
            border-color: #ff0000;
            border-radius: 25px;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #e60000;
                border-color: #e60000;
            }

        .btn-link.btn-floating {
            color: #ff0000;
        }

            .btn-link.btn-floating:hover {
                color: #e60000;
            }

        .btn-login {
            background-color: #ff0000;
            border-color: #ff0000;
            border-radius: 25px;
            font-weight: bold;
            color: #fff;
            transition: all 0.5s ease;
            width: 125px
        }

            .btn-login:hover {
                background-color: #e60000;
                border-color: #e60000;
                color: #fff; /* Change text color to white */
                transform: translateY(-5px); /* Move button up on hover */
            }
    </style>
</head>
<body class="bg-dark">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form method="post">
                    
                    <div class="mb-4">
                        
                        <input asp-for="Email" class="form-control" placeholder="Email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="mb-4">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="row mb-4">
                        <div class="col d-flex justify-content-center">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked>
                                <label class="form-check-label" for="form2Example31"> Remember me </label>
                            </div>
                        </div>
                        <div class="col">
                            <a href="#!" class="text-decoration-none">Forgot password?</a>
                        </div>
                    </div>
                    <input type="Submit" class="btn-login btn btn-primary btn-block mb-4 w-100" >Log in</input>
                    <div class="text-center">
                        <p>Not a member? <a class="text-decoration-none" asp-controller="SignUp" asp-action="Index">Sign Up</a></p>
                        <p>or sign up with:</p>
                        <button type="button" class="btn btn-link btn-floating mx-1">
                            <i class="fab fa-facebook-f"></i>
                        </button>
                        <button type="button" class="btn btn-link btn-floating mx-1">
                            <i class="fab fa-google"></i>
                        </button>
                        <button type="button" class="btn btn-link btn-floating mx-1">
                            <i class="fab fa-twitter"></i>
                        </button>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Include Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
